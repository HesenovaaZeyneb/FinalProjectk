@using Evergreen_Domain
@model List<Doctor>


<!-- Start Hero -->
<section class="bg-half-150 bg-light d-table w-100">
    <div class="container">
        <div class="row mt-5 justify-content-center">
            <div class="col-12">
                <div class="section-title text-center">
                    <h3 class="sub-title mb-4">Doctors team</h3>
                    <p class="para-desc mx-auto text-muted">Our staff consists of both experienced doctors and young people with a new generation of medical education. This allows us to bring together new technologies and practices to provide the best medical care to our patients.</p>

                    <nav aria-label="breadcrumb" class="d-inline-block mt-3">
                        <ul class="breadcrumb bg-transparent mb-0">
                            <li class="breadcrumb-item"><a href="index.html">Doctris</a></li>
                            <li class="breadcrumb-item"><a href="#">Doctors</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Team three</li>
                        </ul>
                    </nav>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
</section><!--end section-->
<!-- End Hero -->
<!-- Start -->
<section class="section">
    <div class="container">
        <div class="row align-items-center">

            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-md-12 mt-4 pt-2">
                    <div class="card team border-0 rounded shadow overflow-hidden">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="team-person position-relative overflow-hidden">
                                    <img src="~/Upload/Doctor/@item.ImgUrl" class="img-fluid" alt="">
                                    <ul class="list-unstyled team-like">
                                        <li><a href="#" class="btn btn-icon btn-pills btn-soft-danger"><i data-feather="heart" class="icons"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card-body">
                                    <a href="#" class="title text-dark h5 d-block mb-0">@item.FullName</a>
                                    <small class="text-muted speciality">@item.Department.Name</small>
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <ul class="list-unstyled mb-0">
                                            <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                            <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                            <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                            <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                            <li class="list-inline-item"><i class="mdi mdi-star text-warning"></i></li>
                                        </ul>
                                        <p class="text-muted mb-0">5 Star</p>
                                    </div>
                                    <ul class="list-unstyled mt-2 mb-0">
                                        <li class="d-flex">
                                            <i class="ri-map-pin-line text-primary align-middle"></i>
                                            <small class="text-muted ms-2">@item.Adres</small>
                                        </li>
                                        <li class="d-flex mt-2">
                                            <i class="ri-time-line text-primary align-middle"></i>
                                            <small class="text-muted ms-2">@item.Date</small>
                                        </li>
                                        <li class="d-flex mt-2">
                                            <i class="ri-money-dollar-circle-line text-primary align-middle"></i>
                                            <small class="text-muted ms-2">$ @item.Payment/ Visit</small>
                                        </li>
                                        <li class="d-flex mt-2">
                                            <i data-feather="phone" class="fea icon-sm text-foot align-middle"></i>
                                            <small class="text-muted ms-2">@item.Phone</small>
                                        </li>
                                    </ul>
                                    <ul class="list-unstyled mt-2 mb-0">
                                        <li class="list-inline-item"><a href="#" class="btn btn-icon btn-pills btn-soft-primary"><i data-feather="facebook" class="icons"></i></a></li>
                                        <li class="mt-2 list-inline-item"><a href="#" class="btn btn-icon btn-pills btn-soft-primary"><i data-feather="linkedin" class="icons"></i></a></li>
                                        <li class="mt-2 list-inline-item"><a href="#" class="btn btn-icon btn-pills btn-soft-primary"><i data-feather="github" class="icons"></i></a></li>
                                        <li class="mt-2 list-inline-item"><a href="#" class="btn btn-icon btn-pills btn-soft-primary"><i data-feather="twitter" class="icons"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--end col-->
            }
        </div><!--end row-->
    </div><!--end container-->
</section><!--end section-->
<!-- End -->
