<script>
    // setTimeout içinde bir işlev tanımlayarak düzgün çalışmasını sağlıyoruz
    setTimeout(function () {
        var errorMessageElement = document.querySelector('.errorMessage');
        if (errorMessageElement) {
            // Eğer .errorMessage sınıfına sahip bir element varsa, burada yapılacak işlemler
            // Örneğin, elementi gizleyebiliriz:
            errorMessageElement.style.display = 'none';
        }
    }, 5000); // Zaman aşımı süresi 1000 milisaniye (1 saniye)
</script>